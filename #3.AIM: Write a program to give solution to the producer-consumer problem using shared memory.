# Find sum of natural number using recursive function.
def recur_sum(n):
    if (n<=0):
        return 0
    else:
        return n + recur_sum(n-1)
num=int(input("Enter  a number : "))
if (num<0):
    print("Enter a positive number.")
else:
    print("The sum of ",recur_sum(num))


